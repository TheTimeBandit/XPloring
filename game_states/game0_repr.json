{
  "rooms": {
    "#room_entrance": {
      "description": "Entrance room, there are some things laying around in the room.",
      "directions": {
        "west": {
          "room_id": "#room_arena"
        }
      },
      "items": [
        "#item_envelope",
        "#equipment_steel_sword",
        "#item_small_healing_potion",
        "#equipment_steel_helmet",
        "#item_small_poison_potion",
        "#equipment_golden_chestplate"
      ],
      "creatures": []
    },
    "#room_arena": {
      "description": "Big round arena.",
      "directions": {
        "east": {
          "room_id": "#room_entrance"
        },
        "north": {
          "trans_obj_id": "#trans_door_exit",
          "room_id": "#room_exit"
        }
      },
      "items": [],
      "creatures": [
        "#creature_dragon"
      ]
    },
    "#room_exit": {
      "description": "The end",
      "directions": {},
      "items": [],
      "creatures": [],
      "auto_commands": {
        "command_good_end": "Congratulations Hero!\nYou are free. Do anything you want, be who you want to be."
      }
    }
  },
  "creatures": {
    "#creature_dragon": {
      "alias": [
        "green dragon", "dragon"
      ],
      "health": 60,
      "damage": 10,
      "drops": [
        "#item_doorkey_exit"
      ],
      "description": "Big green dragon"
    }
  },
  "transition_objects": {
    "#trans_door_exit": {
      "alias": [
        "door"
      ],
      "unlocked": false,
      "description": "Exit door is locked, you need a key",
      "actions": {
        "open": {
          "command_show_description": null
        },
        "unlock": {
          "command_required_item": "#item_doorkey_exit",
          "command_set_unlocked": true,
          "command_remove_item_from_inventory": "#item_doorkey_exit",
          "command_set_description": "Exit door is unlocked, you can leave.",
          "command_show_description": null
        }
      }
    }
  },
  "items": {
    "regular": {
      "#item_envelope": {
        "description": "OPEN to get letter from inside",
        "alias": [
          "envelope"
        ],
        "actions": {
          "open": {
            "command_spawn_item": "#item_letter",
            "command_despawn_item": "#item_envelope",
            "command_remove_item_from_inventory": "#item_envelope"
          }
        }
      },
      "#item_letter": {
        "description": "READ to read content",
        "alias": [
          "letter"
        ],
        "actions": {
          "read": {
            "command_show_message": "Welcome, take sword and kill that dragon"
          }
        }
      },
      "#item_doorkey_exit": {
        "description": "Use this key to unlock the door in the arena",
        "alias": [
          "key"
        ],
        "actions": {}
      }
    },
    "consumable": {
      "#item_small_healing_potion": {
        "value": 25,
        "description": "Small healing potion. USE it to heal yourself",
        "alias": [
          "potion"
        ],
        "actions": {
          "use": {
            "command_use_item": true
          }
        }
      },
      "#item_small_poison_potion": {
        "value": -75,
        "description": "Small unlabelled bottle with strange liquid inside. USE may be cause bad consequences.",
        "alias": [
          "unlabelled bottle", "bottle"
        ],
        "actions": {
          "use": {
            "command_use_item": true,
            "command_show_message": "It was a poison."
          }
        }
      }
    }
  },
  "equipment": {
    "weapons": {
      "#equipment_steel_sword": {
        "damage": 30,
        "alias": [
          "sword"
        ],
        "slot": "hand",
        "in_use": false,
        "description": "Sword made of pure silver with a straight double-edged blade and a grip for two-handed use",
        "actions": {
        }
      }
    },
    "armour": {
      "#equipment_steel_helmet": {
        "resistance": 2,
        "durability": 12,
        "alias": [
          "helmet"
        ],
        "slot": "head",
        "in_use": false,
        "description": "Gladiator helmet made of steel",
        "actions": {
        }
      },
      "#equipment_golden_chestplate": {
        "resistance": 3,
        "durability": 18,
        "alias":[
          "chestplate"
        ],
        "slot": "chest",
        "in_use": false,
        "description": "Steel chestplate armor",
        "actions": {
        }
      }
    }
  },
  "hero": {
    "health": 100,
    "damage": 1,
    "location": "#room_entrance",
    "right_hand": "none",
    "left_hand": "none",
    "head": "none",
    "chest": "none",
    "legs": "none",
    "actions": {
      "look": "display room",
      "go": "move_to direction",
      "inventory": "display inventory",
      "status": "display self"
    },
    "inventory": []
  }
}